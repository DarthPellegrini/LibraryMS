<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "Prateleira" table = "prateleira">
      
      <meta attribute = "class-description">
         Classe da prateleira que cont√©m os livros. 
      </meta>
      
      <id name = "id" type = "int" column = "prateleira_id">
         <generator class="native"/>
      </id>
      
      <list name="livros" table="livro" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="prateleira_id" not-null="true" />
            </key>
            <one-to-many class="Livro" />
        </list>
      
   </class>
</hibernate-mapping>
