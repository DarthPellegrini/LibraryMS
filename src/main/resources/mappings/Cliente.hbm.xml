<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "com.systemhaus.demo.domain.Cliente" table = "cliente">
      
      <meta attribute = "class-description">
         A classe do cliente, contendo referência a um endereço e um cartão. 
      </meta>
      
      <id name = "cpf" type = "string" column = "cpf"/>
      
      <property name = "nome" column = "nome" type = "string"/>
      <property name = "telefone" column = "telefone" type = "string"/>
      <many-to-one name="endereco" foreign-key="endereco" class="com.systemhaus.demo.domain.Endereco" cascade="all"/>
      <one-to-one name="cartao" foreign-key="cartao" class="com.systemhaus.demo.domain.Cartao" cascade="all"/>      
 
   </class>
</hibernate-mapping>
